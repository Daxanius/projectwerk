<Window
    x:Class="BezoekersRegistratieSysteemUI.Beheerder.BeheerderDashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controlls="clr-namespace:BezoekersRegistratieSysteemUI.BeheerderWindow.Paginas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Beheerder"
    Icon="/BRS.ico"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ScaleTransform x:Key="windowScaleTransform" ScaleX="{Binding ScaleX}" ScaleY="{Binding ScaleY}" />
            <FontFamily x:Key="Inter">/Fonts/#Inter</FontFamily>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel LayoutTransform="{StaticResource windowScaleTransform}">
        <controlls:SideBarControl
            x:Name="SideBar"
            Width="350"
            DockPanel.Dock="Left" />
        <Frame
            x:Name="FrameControl"
            NavigationUIVisibility="Hidden"
            Source="/BeheerderWindow/Paginas/DashBoard/DashBoardPage.xaml" />
    </DockPanel>
</Window>