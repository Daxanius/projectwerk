<Window
    x:Class="BezoekersRegistratieSysteemUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconspresenter="clr-namespace:BezoekersRegistratieSysteemUI.icons.IconsPresenter"
    xmlns:local="clr-namespace:BezoekersRegistratieSysteemUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="mainWindow"
    Title="MainWindow"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="{StaticResource Inter}"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ScaleTransform x:Key="windowScaleTransform" ScaleX="{Binding ScaleX}" ScaleY="{Binding ScaleY}" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid LayoutTransform="{StaticResource windowScaleTransform}">
        <Border Background="{StaticResource MainAchtergrond}" CornerRadius="10 10 10 10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        Width="523"
                        Height="250"
                        Margin="0,0,50,0"
                        Background="{StaticResource LichtGrijsAccent}"
                        BorderBrush="Transparent"
                        Click="ParkeerButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20" />
                            </Style>
                        </Button.Resources>
                        <StackPanel Height="250" Orientation="Horizontal">
                            <Label
                                Margin="-305,0,0,0"
                                Content="&#xf163;"
                                FontFamily="Segoe Fluent Icons"
                                FontSize="120"
                                Foreground="White" />
                            <Label
                                Margin="-665,235,0,0"
                                Content="PARKEER APP"
                                FontFamily="Segoe UI Variable Text Semibold"
                                FontSize="60"
                                Foreground="White" />
                        </StackPanel>
                    </Button>
                    <Button
                        Grid.Column="1"
                        Width="523"
                        Height="250"
                        Margin="25,0,25,0"
                        Background="{StaticResource LichtGrijsAccent}"
                        BorderBrush="Transparent"
                        Click="AanmeldButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20" />
                            </Style>
                        </Button.Resources>
                        <StackPanel Height="250" Orientation="Horizontal">
                            <StackPanel.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10" />
                                </Style>
                            </StackPanel.Resources>
                            <iconspresenter:Icon
                                Width="100"
                                Height="100"
                                VerticalAlignment="Center"
                                CircleBackground="Transparent"
                                IconSource="../BezoekerIcon.xaml" />
                            <Label
                                VerticalAlignment="Center"
                                Content="AANMELD APP"
                                FontFamily="Segoe UI Variable Text Semibold"
                                FontSize="60"
                                Foreground="DarkBlue" />
                        </StackPanel>
                    </Button>
                    <Button
                        Grid.Column="2"
                        Width="523"
                        Height="250"
                        Margin="50,0,0,0"
                        Background="{StaticResource LichtGrijsAccent}"
                        BorderBrush="Transparent"
                        Click="AdminButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20" />
                            </Style>
                        </Button.Resources>
                        <StackPanel Height="250" Orientation="Horizontal">
                            <Label
                                Margin="-290,15,0,0"
                                Content="&#xef58;"
                                FontFamily="Segoe Fluent Icons"
                                FontSize="105"
                                Foreground="White" />
                            <Label
                                Margin="-665,235,0,0"
                                Content="ADMIN APP"
                                FontFamily="Segoe UI Variable Text Semibold"
                                FontSize="60"
                                Foreground="White" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>