            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="4"
                    Direction="315"
                    Opacity=".1"
                    ShadowDepth="2"
                    Color="Gray" />
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="WerknemerListBoxStyle" TargetType="ListBox">
        <Setter Property="FontSize" Value="45" />
        <Setter Property="FontWeight" Value="Medium" />
